#include<iostream>
#define SIZE 255
using namespace std;

int main()
{
 int arr[SIZE];
 int num, i = -1;
 
    do{
        i++;
        cout << "ведите ваше число - ";
        cin >> arr[i];
    }while(arr[i] != -1);
 
 int sum = 0;
 for(int j = 0;j < i; j += 1){
     sum += arr[j];
 }
 cout << "сумма = " << sum << endl;
}
